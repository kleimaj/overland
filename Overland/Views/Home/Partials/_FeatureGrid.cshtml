@{
    var features = new List<Tuple<string, string, string>> {
   
        new("Rates as low as 5.99% APR*", "Submit Application", "Get started with a simple application to see your payment options."),
        new("Funding within 24 hours ", "Your Approval", "Select the best loan terms and monthly payment for your situation."),
        new("One easy monthly payment", "Receive Funds", "Once approved the funds can be in your account as soon as 48 hours."),
        new("No origination or prepayment fees ", "Receive Funds", "Once approved the funds can be in your account as soon as 48 hours."),
