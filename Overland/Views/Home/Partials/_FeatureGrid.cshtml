    <div class="features-header">
        <span class="title-white">Rely on Overland Funding for:</span>
    </div>
    <div class="features-grid">
        @foreach (var feature in features.Where(feature => !string.IsNullOrEmpty(feature.Item1))) {
            <div class="features-grid-flex">
                <div class="features-box">
                    <div class="features-box-grid">
                        <span>
                        <picture>
                            <source type="image/webp" srcset="images/check.webp">
                            <img alt="checkmark" src="images/check.png">
                        </picture>
                        </span>
                        <p></p>
                        <p>@feature.Item1</p>
                    </div>
                </div>
            </div>
        }
  
    </div>
     </div>
</div>

